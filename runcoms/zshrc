# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

# virtualenvwrapper
[[ -z $VIRTUAL_ENV ]] && workon default

# chruby
CHRUBY_SCRIPT="/usr/local/share/chruby/chruby.sh"
if [[ -f $CHRUBY_SCRIPT ]]; then
	source $CHRUBY_SCRIPT
	chruby ruby-2

	# add local bin for binstubs
	path=(
		./bin
		$path
	)
fi

# aliases
ALIASES_FILE="$HOME/.aliases"
[[ -f  $ALIASES_FILE ]] && source $ALIASES_FILE

# functions
FUNCTIONS_FILE="$HOME/.functions"
[[ -f  $FUNCTIONS_FILE ]] && source $FUNCTIONS_FILE
